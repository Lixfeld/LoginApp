<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LoginApp.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="250"
        x:Class="LoginApp.Avalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
		Title="Login App" Height="250" Width="300" CanResize="False">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Grid Margin="10">
		<StackPanel>
			<TextBox Text="{Binding UserName}"
					 Watermark="Username"
					 MaxLength="16" />

			<TextBox Text="{Binding Password}"
					 Watermark="Password"
					 PasswordChar="*"
					 Margin="0 10"
					 MaxLength="16" />

			<TextBox Text="{Binding ConfirmPassword}"
					 Watermark="ConfirmPassword"
					 PasswordChar="*"
					 MaxLength="16" />

			<Button Command="{Binding SignUp}"
					Content="Sign Up"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					Margin="0 10" />
		</StackPanel>
	</Grid>
</Window>